server:
  port: 8082

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/order_db
    username: ${DB_USERNAME:your_db_username}
    password: ${DB_PASSWORD:your_db_password}
    driverClassName: com.mysql.cj.jdbc.Driver
  jpa:
    database-platform: org.hibernate.dialect.MySQL57InnoDBDialect
    hibernate:
      ddl-auto: update
  application:
    name: ORDER-SERVICE
  config:
    import: configserver:http://localhost:9296
  security:
    oauth2:
      resourceserver:
        jwt:
          issuer-uri: ${OKTA_ISSUER_URI:https://your-okta-domain.okta.com/oauth2/default}
      client:
        registration:
          internal-client:
            provider: okta
            authorization-grant-type: client_credentials
            scope: internal
            client-id: ${OKTA_CLIENT_ID:your_okta_client_id}
            client-secret: ${OKTA_CLIENT_SECRET:your_okta_client_secret}
        provider:
          okta:
            issuer-uri: ${OKTA_ISSUER_URI:https://your-okta-domain.okta.com/oauth2/default}

# Variables de entorno requeridas:
# DB_USERNAME: Usuario de la base de datos MySQL
# DB_PASSWORD: Contraseña de la base de datos MySQL  
# OKTA_ISSUER_URI: URI del emisor de Okta (ej: https://dev-12345.okta.com/oauth2/default)
# OKTA_CLIENT_ID: Client ID de la aplicación Okta
# OKTA_CLIENT_SECRET: Client Secret de la aplicación Okta

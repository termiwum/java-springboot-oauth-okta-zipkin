server:
  port: 9296

spring:
  application:
    name: CONFIG-SERVER
  cloud:
    config:
      server:
        git:
          uri: ${CONFIG_GIT_URI:https://github.com/your-username/your-config-repo}
eureka:
  instance:
    prefer-ip-address: true
  client:
    fetch-registry: true
    register-with-eureka: true
    service-url:
      defaultZone: ${EUREKA_SERVER_ADDRESS:http://localhost:8761/eureka}

# Variables de entorno requeridas para Config Server:
# CONFIG_GIT_URI: URI del repositorio Git donde están las configuraciones
# EUREKA_SERVER_ADDRESS: Dirección del servidor Eureka (por defecto: http://localhost:8761/eureka)

server:
  port: 8080

spring:
  datasource:
    url: jdbc:mysql://${DB_HOST:localhost}:3306/product_db
    username: ${DB_USERNAME:your_db_username}
    password: ${DB_PASSWORD:your_db_password}
    driverClassName: com.mysql.cj.jdbc.Driver
  jpa:
    database-platform: org.hibernate.dialect.MySQL57InnoDBDialect
    hibernate:
      ddl-auto: update
  application:
    name: PRODUCT-SERVICE
  config:
    import: configserver:http://localhost:9296

logging:
  level:
    "[com.termiwum.productservice.controller]": DEBUG
    "[com.termiwum.productservice.service]": DEBUG
  pattern:
    console: "%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"

# Variables de entorno requeridas para Product Service:
# DB_HOST: Host de la base de datos MySQL (por defecto: localhost)
# DB_USERNAME: Usuario de la base de datos MySQL
# DB_PASSWORD: Contrase√±a de la base de datos MySQL
